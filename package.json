{
  "name": "react-ts-template",
  "version": "*",
  "private": true,
  "homepage": "http://lukeshay.com",
  "main": "src/index.tsx",
  "author": "Luke Shay",
  "license": "LGPL",
  "scripts": {
    "start": "recaptchaKey=$GOOGLE_API_KEY webpack-dev-server --hot",
    "start:local": "ENV=local-dev yarn start",
    "build": "ENV=prod recaptchaKey=$GOOGLE_API_KEY webpack -p",
    "deploy": "serve -p 80 -s ./dist",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "format": "yarn lint --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "validate": "yarn typecheck && yarn lint",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@vertexvis/viewer": "^0.3.2-3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-inlinesvg": "^1.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^5.5.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.42.0"
  },
  "devDependencies": {
    "@loadable/component": "^5.12.0",
    "@lukeshay/babel-config-react-typescript": "^0.0.1",
    "@lukeshay/eslint-config-react-typescript": "^0.0.3",
    "@lukeshay/jest-config": "^0.0.2",
    "@lukeshay/prettier-config": "^0.0.1",
    "@lukeshay/typescript-config": "^0.0.2",
    "@svgr/webpack": "^5.2.0",
    "@types/jest": "^25.1.4",
    "@types/react-test-renderer": "^16.9.2",
    "babel-loader": "^8.0.6",
    "brotli-webpack-plugin": "^1.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^6.0.0",
    "jest": "^25.1.0",
    "node": "^13.10.1",
    "react-hot-loader": "^4.12.19",
    "react-test-renderer": "^16.13.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest-junit": {
    "output": "./reports/jest-junit.xml",
    "ancestorSeparator": " , ",
    "classNameTemplate": ""
  }
}
